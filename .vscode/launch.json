{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [],
      "program": "${workspaceFolder}/app/app.js",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/app/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Launch App (Debug Mode)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect"],
      "program": "${workspaceFolder}/app/app.js",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/app/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std"
    },
    {
      "name": "Run All Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Run Tests in Watch Mode",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:watch"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Debug Current Test File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "${file}",
        "--runInBand",
        "--setupFilesAfterEnv=${workspaceFolder}/test/setup.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test",
        "NODE_OPTIONS": "--experimental-vm-modules"
      }
    },
    {
      "name": "Debug Auth Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "test/auth.test.js",
        "--runInBand",
        "--setupFilesAfterEnv=${workspaceFolder}/test/setup.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test",
        "NODE_OPTIONS": "--experimental-vm-modules"
      }
    },
    {
      "name": "Debug Trips Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "test/trips.test.js",
        "--runInBand",
        "--setupFilesAfterEnv=${workspaceFolder}/test/setup.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test",
        "NODE_OPTIONS": "--experimental-vm-modules"
      }
    },
    {
      "name": "Debug Cities Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "test/cities.test.js",
        "--runInBand",
        "--setupFilesAfterEnv=${workspaceFolder}/test/setup.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test",
        "NODE_OPTIONS": "--experimental-vm-modules"
      }
    },
    {
      "name": "Debug Sessions Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "test/sessions.test.js",
        "--runInBand",
        "--setupFilesAfterEnv=${workspaceFolder}/test/setup.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test",
        "NODE_OPTIONS": "--experimental-vm-modules"
      }
    }
  ],
  "compounds": [
    {
      "name": "All Tests (Sequential)",
      "configurations": [
        "Debug Auth Tests",
        "Debug Trips Tests",
        "Debug Cities Tests",
        "Debug Sessions Tests"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "tests"
      }
    }
  ]
}
